{
  "name": "idv-external-case-monitor",
  "version": "1.0.0",
  "description": "A Lambda that triggers idv-external-case-api to start an asynchronous poll-and-update cycle for complex (non-OneLogin) identity verification backlog cases.",
  "main": "dist/app.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "eslint 'src/**/*.{ts,js}' 'test/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' 'test/**/*.{ts,js}' --fix",
    "coverage": "jest --coverage",
    "test": "jest",
    "sonarqube-base-branch": "sonar-scanner",
    "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=main",
    "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "author": "Companies House",
  "license": "MIT",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.276",
    "@companieshouse/structured-logging-node": "^2.0.1",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#1.0.92"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.156",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "sonarqube-scanner": "^3.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/companieshouse/idv-external-case-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/companieshouse/idv-external-case-monitor/issues"
  },
  "homepage": "https://github.com/companieshouse/idv-external-case-monitor#readme"
}
